public class LinearSearch
{
    public static int linearsearch(int[] array,int answer)
    {
        int index=-1;
        for (int i=0;i<array.length;i++)
        {
            if (array[i]==answer)
            {
                index = i;
                break;
            }
        }
        return index;
    }

    public static void main(String[] args)
    {
        int[] array = {1,2,3,4,5,6};
        System.out.println(linearsearch(array,2));
    }
}
